{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "paths": {
      "@src/*": ["src/*"],
	  "@tcg/*": ["src/tcg/*"],
	  "@character/*": ["src/tcg/characters/*"],
      "@class/*": ["src/tcg/classes/*"],
      "@type/*": ["src/tcg/types/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
